<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unah.usermanager.controller.PrivilegesMysqlController">
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <VBox.margin>
         <Insets top="40.0" />
      </VBox.margin>
      <VBox prefHeight="175.0" prefWidth="531.0">
         <ListView fx:id="lsvPriv" prefHeight="200.0" prefWidth="200.0">
            <VBox.margin>
               <Insets left="10.0" right="10.0" />
            </VBox.margin>
         </ListView>
      </VBox>
      <VBox alignment="CENTER_LEFT" prefHeight="175.0" prefWidth="179.0">
         <CheckBox fx:id="chbxAll" mnemonicParsing="false" onMouseClicked="#onMouseEventAll" text="All" />
         <CheckBox fx:id="chbxSelect" mnemonicParsing="false" onMouseClicked="#onMouseEventSelect" text="Select_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
         <CheckBox fx:id="chbxInsert" mnemonicParsing="false" onMouseClicked="#onMouseEventInsert" text="Insert_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
         <CheckBox fx:id="chbxUpdate" mnemonicParsing="false" onMouseClicked="#onMouseEventUpdate" text="Update_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
         <CheckBox fx:id="chbxDelete" mnemonicParsing="false" onMouseClicked="#onMouseEventDelete" text="Delete_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
         <CheckBox fx:id="chbxCreate" mnemonicParsing="false" onMouseClicked="#onMouseEventCreate" text="Create_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
         <CheckBox fx:id="chbxDrop" mnemonicParsing="false" onMouseClicked="#onMouseEventDrop" text="Drop_priv" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
               <Insets bottom="5.0" right="10.0" top="5.0" />
            </VBox.margin>
         </CheckBox>
      </VBox>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <ComboBox fx:id="cbxTable" prefHeight="30.0" prefWidth="120.0">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </ComboBox>
      <ComboBox fx:id="cbxUser" prefHeight="30.0" prefWidth="120.0">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </ComboBox>
      <Button mnemonicParsing="false" onAction="#onGrantPrivileges" prefHeight="35.0" prefWidth="119.0" text="Grant" />
      <Button mnemonicParsing="false" onAction="#onRevokePrivileges" prefHeight="35.0" prefWidth="119.0" text="Revoke">
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </Button>
   </HBox>
</VBox>
