<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="460.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unah.usermanager.controller.ConfigController">
   <HBox alignment="CENTER" prefHeight="73.0" prefWidth="520.0">
      <VBox.margin>
         <Insets left="40.0" right="40.0" top="100.0"/>
      </VBox.margin>
      <Label contentDisplay="BOTTOM" text="SGBD">
         <HBox.margin>
            <Insets right="220.0"/>
         </HBox.margin>
         <graphic>
            <ComboBox fx:id="cbxSGBD" onAction="#onEnableInstance" prefHeight="26.0" prefWidth="160.0"/>
         </graphic>
      </Label>
   </HBox>
   <HBox alignment="CENTER" layoutX="10.0" layoutY="184.0" prefHeight="73.0" prefWidth="520.0">
      <Label contentDisplay="BOTTOM" text="Server">
         <graphic>
            <TextField fx:id="txfServer" alignment="CENTER" promptText="localhost"/>
         </graphic>
         <HBox.margin>
            <Insets right="60.0"/>
         </HBox.margin>
      </Label>
      <Label contentDisplay="BOTTOM" layoutX="255.0" layoutY="22.0" text="Instance">
         <graphic>
            <TextField fx:id="txfInstance" alignment="CENTER" disable="true" promptText="computer name"/>
         </graphic>
      </Label>
   </HBox>
   <HBox alignment="CENTER" layoutX="50.0" layoutY="110.0" prefHeight="73.0" prefWidth="520.0">
      <Label contentDisplay="BOTTOM" text="Port">
         <HBox.margin>
            <Insets right="60.0"/>
         </HBox.margin>
         <graphic>
            <TextField fx:id="txfPort" alignment="CENTER" promptText="3306"/>
         </graphic>
      </Label>
      <Label contentDisplay="BOTTOM" text="BD">
         <graphic>
            <TextField fx:id="txfBD" alignment="CENTER" promptText="mydb"/>
         </graphic>
      </Label>
   </HBox>
   <HBox alignment="CENTER" layoutX="10.0" layoutY="184.0" prefHeight="73.0" prefWidth="520.0">
      <Label contentDisplay="BOTTOM" text="User">
         <HBox.margin>
            <Insets right="60.0"/>
         </HBox.margin>
         <graphic>
            <TextField fx:id="txfUser" alignment="CENTER" promptText="galex"/>
         </graphic>
      </Label>
      <Label contentDisplay="BOTTOM" text="Password">
         <graphic>
            <PasswordField fx:id="txfPassword" alignment="CENTER" promptText="********"/>
         </graphic>
      </Label>
   </HBox>
   <HBox alignment="CENTER" layoutX="10.0" layoutY="258.0" prefHeight="73.0" prefWidth="520.0">
      <Button fx:id="btnTestConn" mnemonicParsing="false" onAction="#onTestConnection" prefHeight="33.0"
              prefWidth="383.0" text="Test Connection"/>
   </HBox>
</VBox>
